{
  "name": "property",
  "gateway": {
    "config": {
      "wsPort": 3000
    }
  },
  "config": {
    "wsPort": 3001,
    "initialObjects": [
      {"firstName": "Alyssa", "lastName": "Hacker", "age": 20}
    ],
    "schema": {
      "title": "Person",
      "type": "object",
      "properties": {
          "firstName": {
              "type": "string"
          },
          "lastName": {
              "type": "string"
          },
          "age": {
              "description": "Age in years",
              "type": "integer",
              "minimum": 0
          }
      },
      "required": ["firstName", "lastName"]
    }
  },
  "actions": {
    "package": {
      "include": [ "src/app/property/**" ]
    },
    "app": {
      "names": [
        { "for": "src/app/app.component.html", "use": "property-root" }
      ]
    }
  },
  "actionsNoRequest": {
    "exec": [
      "property-choose-object",
      "property-create-property"
    ],
    "eval": [
      "property-create-property"
    ]
  },
  "actionsRequestOptional": [
    "property-show-object",
    "property-show-objects",
    "property-create-object"
  ]
}
