{
  "name": "dv-cli",
  "version": "0.0.1",
  "description": "CLI tool for Déjà Vu",
  "main": "./dist/dv.js",
  "bin": {
    "dv": "./dist/dv.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && copyfiles -f src/*.blueprint.* dist",
    "package": "npm run clean && npm run build",
    "lint": "./node_modules/.bin/tslint -p . -c tslint.json src/**/*.ts",
    "clean": "rm -rf ./dist",
    "prepare": "npm run package",
    "postinstall": "npm install -g",
    "reinstall-globally": "npm run clean && npm run build && npm uninstall -g && npm install -g"
  },
  "dependencies": {
    "commander": "^2.13.0",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "posthtml": "^0.11.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/glob": "^5.0.35",
    "@types/lodash": "^4.14.96",
    "@types/node": "^9.3.0",
    "copyfiles": "^1.2.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3"
  },
  "repository": "github:spderosso/dejavu",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/spderosso/dejavu/issues"
  },
  "homepage": "https://github.com/spderosso/dejavu#readme"
}
