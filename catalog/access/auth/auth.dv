cliche Auth {
  data User {
    username: Text
  }

  data Resource {
    // TODO: allow multiple users to own a resource
    owner: User,
    viewers: [ User ]
  }

  // Will also sign in the user
  widget RegisterWithRedirect {
    on_register_ok: Widget
  }
  widget SignInWithRedirect {
    on_signin_ok: Widget
  }
  widget SignOutWithRedirect {
    on_signout_ok: Widget
  }
  widget LoggedIn {
    user: User
  }
}
