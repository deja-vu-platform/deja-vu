cliche Comment {
  data Comment {
    author: Author,
    target: Target,
    content: text
  }

  data Author {
    name: text
  }

  data Target {
    name: text
  }

  widget ShowComment {
    comment: Comment
  }

  widget ShowComments uses ShowComment {
    target: Target
  }

  widget NewComment uses NewCommentText, NewCommentButton {
    author: Author,
    target: Target,
    comment: Comment
  }

  widget NewCommentText {
    author: Author,
    target: Target,
    comment: Comment,
    submit_ok: boolean
  }

  widget NewCommentButton {
    author: Author,
    target: Target,
    comment: Comment,
    submit_ok: boolean
  }

  widget EditComment {
    comment: Comment
  }

}
