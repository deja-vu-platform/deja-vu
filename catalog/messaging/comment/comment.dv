cliche Comment {
  data Comment {
    author: Author,
    target: Target,
    content: Text
  }

  data Author {
    name: Text
  }

  data Target {
    name: Text
  }

  widget Comments {
    target: Target
  }

  widget NewComment {
    author: Author,
    target: Target
  }

  widget CommentsWithComment uses Comments, NewComment {
    target: Target = Comments.target + NewComment.target,
    author: Author = NewComment.target
  }
  
}
