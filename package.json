{
  "name": "dv-monorepo",
  "private": true,
  "license": "MIT",
  "repository": "github:spderosso/dejavu",
  "scripts": {
    "bootstrap": "yarn install",
    "prepare": "yarn run package",
    "package": "lerna run package",
    "postinstall": "yarn --check-files --ignore-scripts",
    "test": "lerna run --no-bail test --stream --concurrency=1",
    "clean": "lerna clean && lerna run clean && rm -rf node_modules",
    "lint": "lerna run --no-bail lint --stream",
    "lint-fix": "lerna run --no-bail lint-fix --stream",
    "start": "echo \"This monorepo has multiple packages. To start a concept or app, you must navigate to the concept or app directory and then do 'yarn start'\""
  },
  "devDependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/cdk": "^5.2.1",
    "@angular/cli": "^1.7.3",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@angular/material": "^5.2.1",
    "@angular/material-moment-adapter": "^5.2.1",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@types/jasmine": "2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/lodash": "ts2.5",
    "@types/mongodb": "^3.1.8",
    "@types/uuid": "^3.4.3",
    "bootstrap": "^4.0.0",
    "chokidar-cli": "^2.0.0",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "core-js": "^2.4.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lerna": "^3.16.5",
    "lodash": "^4.17.5",
    "mongodb": "^3.0.4",
    "ng-packagr": "^10.1.1",
    "nodemon": "^1.17.2",
    "protractor": "~5.1.2",
    "rxjs": "5.5.6",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3",
