App <: Cliche {
  construct := "app"

  Paragraph
    += IncludeDecl -- uses
    | AssignmentDecl -- assignment

  IncludeDecl = "include" clicheName ParamsDecl? AsDecl*
  AsDecl = "as" name
  clicheName = alnum* "/" name

  ParamsDecl = "[" ParamDecl ("," ParamDecl)* "]"
  ParamDecl
    = Type "for" name -- data
    | name "replacing" name "in" name -- replaces

  WidgetDecl := "main"? "widget" name "{" FieldBody? "}"

  // Assignments
  AssignmentDecl = name ":" Type "=" Obj
  Obj = "{" ObjBody ("," ObjBody)* "}"
  ObjBody = name ":" Value
  Value
    = number -- number
    | Obj -- obj
    | "\"" (~"\"" any)* "\"" -- text
    | "[" ArrayDecl? "]" -- array
    | (~"\"" name) -- ref

  number = digit+
  ArrayDecl = Value ("," Value)*
}
