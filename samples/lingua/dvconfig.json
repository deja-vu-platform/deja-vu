{
  "name": "lingua",
  "usedCliches": {
    "authentication": {
      "config": {
        "reinitDbOnStartup": false
      }
    },
    "authorization": {
      "config": {
        "reinitDbOnStartup": false
      }
    },
    "userProfile": {
      "name": "property",
      "config": {
        "reinitDbOnStartup": false,
        "schema": {
          "title": "Profile",
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "aboutMe": {
              "type": "string"
            },
            "learningLanguage": {
              "type": "string",
              "enum": ["English", "French"]
            }
          }
        }
      }
    },
    "chat": {
      "config": {
        "reinitDbOnStartup": false
      }
    },
    "chatGroup": {
      "name": "group",
      "config": {
        "reinitDbOnStartUp": false
      }
    },
    "correction": {
      "name": "property",
      "config": {
        "schema": {
          "title": "Correction",
          "type": "object",
          "properties": {
            "originalText": {
              "type": "string"
            },
            "revisedText": {
              "type": "string"
            },
            "comment": {
              "type": "string"
            },
            "authorId": {
              "type": "string"
            },
            "chatId": {
              "type": "string"
            }
          }
        }
      }
    },
    "rating": {
      "config": {
        "reinitDbOnStartup": false
      }
    }
  },
  "routes": [
    { "path": "", "action": "show-chat" },
    { "path": "login", "action": "login" },
    { "path": "signup", "action": "signup" },
    { "path": "profile", "action": "profile" },
    { "path": "users", "action": "users"},
    { "path": "chat", "action": "show-chat"}
  ]
}
