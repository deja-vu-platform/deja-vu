{
  "name": "livescorecard",
  "usedConcepts": {
    "hostAuthentication": {
      "name": "authentication"
    },
    "climberCode": {
      "name": "passkey"
    },
    "competitionCode": {
      "name": "passkey"
    },
    "authorization": {},
    "event": {},
    "task": {},
    "competitionHosts": {
      "name": "group"
    },
    "competitionClimbers": {
      "name": "group"
    },
    "competitionClimbs": {
      "name": "group"
    },
    "sex": {
      "name": "label",
      "config": {
        "initialLabelIds": ["female", "male"]
      }
    },
    "category": {
      "name": "label",
      "config": {
        "initialLabelIds": ["beginner", "intermediate", "advanced", "open"]
      }
    },
    "userProfile": {
      "name": "property",
      "config": {
        "schema": {
          "title": "UserProfile",
          "type": "object",
          "properties": {
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            }
          },
          "required": ["firstName", "lastName"]
        }
      }
    },
    "climb": {
      "name": "property",
      "config": {
        "schema": {
          "title": "Climb",
          "type": "object",
          "properties": {
            "climbNumber": {
              "type": "number"
            },
            "score": {
              "type": "number"
            }
          },
          "required": ["climbNumber", "score"]
        }
      }
    },
    "competition": {
      "name": "property",
      "config": {
        "schema": {
          "title": "Competition",
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "rules": {
              "type": "string"
            }
          },
          "required": ["name"]
        }
      }
    },
    "climberScore" : {
      "name": "scoring",
      "config": {
        "oneToOneScoring": false
      }
    },
    "falls" : {
      "name": "scoring",
      "config": {
        "oneToOneScoring": false
      }
    }
  },
  "routes": [
    { "path": "/climber", "component": "show-scorecard" },
    { "path": "/climber/leaderboard", "component": "show-leaderboard" },
    { "path": "/climber/rules", "component": "show-rules" },

    { "path": "/host", "component": "show-competitions" },
    { "path": "/host/competition-participants", "component": "show-climbers" },
    { "path": "/host/competition-climbs", "component": "show-climbs" },
    { "path": "/host/competition-leaderboard", "component": "show-leaderboard" },
    { "path": "/host/competition-hosts", "component": "show-hosts" },
    { "path": "/host/competition-rules", "component": "show-rules" },
    { "path": "/host/edit-competition", "component": "edit-competition" },
    { "path": "/host/edit-participant", "component": "edit-participant" },
    { "path": "/host/edit-climb", "component": "edit-climb" },

    { "path": "/register", "component": "register" },

    { "path": "/spectator", "component": "show-leaderboard" },
    { "path": "/spectator/rules", "component": "show-rules" },

    { "path": "/login/climber", "component": "climber-login" },
    { "path": "/login/host", "component": "host-login" },
    { "path": "/login/spectator", "component": "spectator-login" },

    { "path": "", "component": "climber-login" }
  ]
}
