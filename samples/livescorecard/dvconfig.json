{
  "name": "livescorecard",
  "type": "app",
  "gateway": {
    "config": {
      "wsPort": 3000
    }
  },
  "usedCliches": {
    "hostauthentication": {
      "name": "authentication",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "climbercode": {
      "name": "passkey",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "competitioncode": {
      "name": "passkey",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "authorization": {
      "name": "authorization",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "event": {
      "name": "event",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "task": {
      "name": "task",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "competitionhosts": {
      "name": "group",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "competitionclimbers": {
      "name": "group",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "ranking": {
      "name": "ranking",
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "sex": {
      "name": "label",
      "config": {
        "reinitDbOnStartup": true,
        "initialLabelIds": ["female", "male"]
      }
    },
    "category": {
      "name": "label",
      "config": {
        "reinitDbOnStartup": true,
        "initialLabelIds": ["Beginner", "Intermediate", "Advanced", "Open"]
      }
    },
    "userprofile": {
      "name": "property",
      "config": {
        "reinitDbOnStartup": true,
        "schema": {
          "title": "UserProfile",
          "type": "object",
          "properties": {
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            }
          },
          "required": ["firstName, lastName"]
        }
      }
    },
    "problem": {
      "name": "property",
      "config": {
        "reinitDbOnStartup": true,
        "schema": {
          "title": "Problem",
          "type": "object",
          "properties": {
            "climbNumber": {
              "type": "number"
            }
          },
          "required": ["climbNumber"]
        }
      }
    },
    "competition": {
      "name": "property",
      "config": {
        "reinitDbOnStartup": true,
        "schema": {
          "title": "Competition",
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "rules": {
              "type": "string"
            }
          },
          "required": ["name"]
        }
      }
    },
    "scoring" : {
      "name": "scoring",
      "config": {
        "oneToOneScoring": true
      }
    }
  },
  "routes": [
    { "path": "climber", "action": "livescorecard-climber-scorecard" },
    { "path": "climber/leaderboard", "action": "livescorecard-climber-leaderboard" },
    { "path": "climber/buddy-landing", "action": "livescorecard-buddy-landing" },
    { "path": "climber/buddy-scorecard", "action": "livescorecard-buddy-scorecard" },
    { "path": "climber/rules", "action": "livescorecard-show-rules" },

    { "path": "host", "action": "livescorecard-show-competitions" },
    { "path": "host/competition-participants", "action": "livescorecard-show-participants" },
    { "path": "host/competition-problems", "action": "livescorecard-show-problems" },
    { "path": "host/competition-leaderboard", "action": "livescorecard-host-leaderboard" },
    { "path": "host/competition-hosts", "action": "livescorecard-show-hosts" },
    { "path": "host/competition-rules", "action": "livescorecard-host-rules" },

    { "path": "register", "action": "livescorecard-register" },

    { "path": "spectator", "action": "livescorecard-spectator-leaderboard" },
    { "path": "spectator/rules", "action": "livescorecard-show-rules" },

    { "path": "login/climber", "action": "livescorecard-climber-login" },
    { "path": "login/host", "action": "livescorecard-host-login" },
    { "path": "login/spectator", "action": "livescorecard-spectator-login" },

    { "path": "", "action": "livescorecard-climber-login" }
  ]
}
