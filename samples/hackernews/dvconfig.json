{
  "name": "hackernews",
  "type": "app",
  "gateway": {
    "config": {
      "wsPort": 3000
    }
  },
  "usedCliches": {
    "authentication": {
      "name": "authentication",
      "config": {
        "wsPort": 3002
      }
    },
    "comment": {
      "name": "comment",
      "config": {
        "wsPort": 3003
      }
    },
    "property": {
      "name": "property",
      "config": {
        "wsPort": 3004,
        "schema": {
          "title": "Post",
          "type": "object",
          "properties": {
              "author": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "url"
              }
          },
          "required": ["author", "title", "url"]
        }
      }
    },
    "scoringposts": {
      "name": "scoring",
      "config": {
        "wsPort": 3005,
        "oneToOneScoring": true
      }
    },
    "scoringcomments": {
      "name": "scoring",
      "config": {
        "wsPort": 3006,
        "oneToOneScoring": true
      }
    }
  },
  "routes": [
    { "path": "item", "action": "show-post-details" },
    { "path": "login", "action": "login" },
    { "path": "news", "action": "home" },
    { "path": "submit", "action": "submit-post" },
    { "path": "", "action": "home" }
  ]
}
