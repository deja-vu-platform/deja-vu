{
  "name": "hackernews",
  "watch": true,
  "gateway": {
    "config": {
      "wsPort": 3000
    }
  },
  "usedCliches": {
    "authentication": {
      "name": "authentication",
      "config": {
        "wsPort": 3002
      }
    },
    "comment": {
      "name": "comment",
      "config": {
        "wsPort": 3003
      }
    },
    "property": {
      "name": "property",
      "config": {
        "wsPort": 3004,
        "schema": {
          "title": "Post",
          "type": "object",
          "properties": {
              "author": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
          },
          "required": ["author", "title", "url"]
        }
      }
    },
    "scoring": {
      "name": "scoring",
      "config": {
        "wsPort": 3005
      }
    }
  },
  "actions": {
    "app": {
      "names": [
        {"for": "src/app/app.component.html", "use": "hackernews-root"}
      ]
    }
  },
  "routes": [
    { "path": "item", "action": "hackernews-show-post-page" },
    { "path": "login", "action": "hackernews-login" },
    { "path": "news", "action": "hackernews-home" },
    { "path": "submit", "action": "hackernews-submit-post" },
    { "path": "", "action": "hackernews-home" }
  ]
}
