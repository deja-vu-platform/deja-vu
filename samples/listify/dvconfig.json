{
  "name": "listify",
  "type": "app",
  "usedCliches": {
    "authentication": {
      "name": "authentication"
    },
    "group": {
      "name": "group"
    },
    "list": {
      "name": "property",
      "config": {
        "schema": {
          "title": "List",
          "type": "object",
          "properties": {
            "creator": {
              "type": "string"
            },
            "locked": {
              "type": "boolean"
            },
            "name": {
              "type": "string"
            }
          },
          "required": ["creator", "locked", "name"]
        }
      }
    },
    "listoption": {
      "name": "property",
      "config": {
        "schema": {
          "title": "List Option",
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "required": ["name"]
        }
      }
    },
    "ranking": {
      "name": "ranking",
      "config": {
        "oneToOneRanking": true
      }
    },
    "scoring": {
      "name": "scoring",
      "config": {
        "oneToOneScoring": true
      }
    } 
  },
  "routes": [
    { "path": "login", "action": "listify-login" },
    { "path": "signup", "action": "listify-signup" },
    { "path": "profile", "action": "listify-profile-rankings" },
    { "path": "profile/rankings", "action": "listify-profile-rankings" },
    { "path": "profile/lists", "action": "listify-profile-lists" },
    { "path": "profile/list-invites", "action": "listify-profile-list-invites" },
    { "path": "ranking", "action": "listify-ranking" },
    { "path": "lists/create", "action": "listify-create-list" },
    { "path": "lists/consensus", "action": "listify-view-list-rankings" },
    { "path": "lists/rankings/edit", "action": "listify-edit-list-rankings" },
    { "path": "home/recent", "action": "listify-home-show-recent" },
    { "path": "home/trending", "action": "listify-home-show-trending" },
    { "path": "", "action": "listify-home-show-trending" }
  ]
}
