{
  "name": "mapmit",
  "type": "app",
  "usedCliches": {
    "authentication": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "authorization": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "event": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "geolocation": {
      "config": {
        "reinitDbOnStartup": true,
        "mapType": "leaflet"
      }
    },
    "group": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "property": {
      "name": "property",
      "config": {
        "reinitDbOnStartup": true,
        "schema": {
          "title": "EventInfo",
          "type": "object",
          "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "roomNumber": {
                "type": "string"
              },
              "locationDescription": {
                "type": "string"
              }
          },
          "required": ["title", "description"]
        }
      }
    }
  },
  "routes": [
    { "path": "home", "action": "mapmit-home" },
    { "path": "signup", "action": "mapmit-signup" },
    { "path": "login", "action": "mapmit-login" },
    { "path": "my-events", "action": "mapmit-show-my-events" },
    { "path": "create-event", "action": "mapmit-create-event" },
    { "path": "my-groups", "action": "mapmit-show-my-groups" },
    { "path": "", "action": "mapmit-home" }
  ]
}
