{
  "name": "rendezvous",
  "usedConcepts": {
    "authentication": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "authorization": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "comment": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "event": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "geolocation": {
      "config": {
        "mapType": "leaflet",
        "reinitDbOnStartup": true
      }
    },
    "group": {
      "config": {
        "reinitDbOnStartup": true
      }
    },
    "relevantinterests": {
      "name": "label",
      "config": {
        "reinitDbOnStartup": true,
        "initialLabelIds": [
          "Sports", "Music", "Food & Drink", "Outdoor", "Theatre",
          "Culture & History"
        ]
      }
    },
    "eventdetails": {
      "name": "property",
      "config": {
        "reinitDbOnStartup": true,
        "schema": {
          "title": "EventDetails",
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "additionalInfo": {
              "type": "string"
            }
          }
        }
      }
    },
    "userprofile": {
      "name": "property",
      "config": {
        "reinitDbOnStartup": true,
        "schema": {
          "title": "UserProfile",
          "type": "object",
          "properties": {
              "firstName": {
                "type": "string"
              },
              "middleName": {
                "type": "string"
              },
              "lastName": {
                "type": "string"
              },
              "phoneNumber": {
                "type": "string"
              },
              "zipCode": {
                "type": "number"
              },
              "majors": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
          },
          "required": ["firstName", "lastName", "zipCode", "email"]
        }
      }
    }
  },
  "routes": [
    { "path": "main", "action": "main" },
    { "path": "login", "action": "login" },
    { "path": "register", "action": "register" },
    { "path": "event-details", "action": "show-event-details" },
    { "path": "create-event", "action": "create-event" },
    { "path": "profile", "action": "show-user-profile" },
    { "path": "edit-profile", "action": "edit-user-profile" },
    { "path": "", "action": "main" }
  ]
}
